{
	"compilerOptions": {
		"target": "es6",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"outDir": "dist",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": "src"
	},
	"include": ["src/**/*"],
	"exclude": [
		"./node_modules"
	]
}
